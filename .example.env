POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

APP_PORT=5000

# WB API Configuration
# Get your API token from Wildberries seller portal
WB_API_TOKEN=your_wb_api_token_here
WB_API_BASE_URL=https://common-api.wildberries.ru
WB_API_TIMEOUT=30000

# Google Sheets Configuration (OPTIONAL - оставьте пустым если не нужна синхронизация)
# Если не заполнено - сервис будет работать только с БД, без синхронизации с Google Sheets
# Инструкция по настройке: см. README.md раздел "Настройка Google Service Account"
# GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# GOOGLE_SPREADSHEET_IDS=spreadsheet_id_1,spreadsheet_id_2

# Scheduler Configuration
# Cron expressions for task scheduling
# Default: Every hour for tariff fetch
TARIFF_FETCH_CRON=0 * * * *
# Default: Every 6 hours for sheets sync
SHEETS_SYNC_CRON=0 */6 * * *

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=debug